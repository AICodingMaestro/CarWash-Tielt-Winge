# Environment Configuration
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/carwash-tielt-winge
MONGODB_TEST_URI=mongodb://localhost:27017/carwash-tielt-winge-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
